{
  "dart.flutterSdkPath": null,
  "dart.lineLength": 100,
  "editor.rulers": [100],
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "files.associations": {
    "*.dart": "dart"
  },
  "search.exclude": {
    "**/.dart_tool": true,
    "**/.fvm": true,
    "**/build": true,
    "**/ios/.symlinks": true,
    "**/ios/Flutter.framework": true,
    "**/ios/Flutter.podspec": true,
    "**/linux/flutter/ephemeral": true,
    "**/macos/Flutter/GeneratedPluginRegistrant.swift": true,
    "**/macos/Flutter/Flutter-Release.xcconfig": true,
    "**/pubspec.lock": true,
    "**/pubspec_overrides.yaml": true,
    "**/web/flutter_service_worker.js": true
  },
  "files.watcherExclude": {
    "**/.dart_tool": true,
    "**/.fvm": true,
    "**/build": true
  },
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [100],
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.suggestSnippets": true
  },
  "debug.openDebug": "openOnDebugBreak",
  "debug.allowBreakpointsEverywhere": true,
  "debug.inlineValues": "on",
  "debug.showBreakpointsInOverviewRuler": true,
  "terminal.integrated.shell.linux": "/bin/bash",
  "terminal.integrated.shell.osx": "/bin/zsh",
  "flutter.hotReloadOnSave": "always",
  "flutter.hot.restartOnSave": false,
  "flutter.hot.recomendation": false,
  "flutter.analyzePath": "analysis_options.yaml"
}